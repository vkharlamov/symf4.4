{% extends 'base.html.twig' %}

{% block title %}Read Post{% endblock %}

{% block body %}
    <div class="row">
        <div>
            <p>
                <b>{{ post.title }} #{{ post.id }}</b>
            </p>
            {% for tag in post.tags %}
                <h5><span class="label label-success">{{ tag.name }}</span></h5>
            {% endfor %}
            <div>
                {{ post.content }}
            </div>
            <div>Author {{ post.user.name }} {{ post.user.lastName }}</div>
            <p>Raiting :
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                {{ countVotes }}
                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
            </p>
            <hr>
            <h3>Comments</h3>
            {% for comment in post.comments %}
                <div>
                    <em>Author: {{ comment.user.name }}</em>
                    <p>{{ comment.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

        {{ form_start(commentForm, {
            'method': 'POST'}) }}

        {{ form_row(commentForm.comment) }}

        <div class="mt-3 mb-4">
            <button type="submit" class=" btn btn-md btn-outline-primary">Comment</button>
        </div>
        {{ form_end(commentForm) }}
    {% endif %}
{% endblock %}
