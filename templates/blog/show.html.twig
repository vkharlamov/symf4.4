{% extends 'base.html.twig' %}

{% block title %}List of Posts{% endblock %}

{% block body %}
    <h1>List of Posts</h1>
    <div>
        <p>
            <b>{{ post.title }} #{{ post.id }}</b>
        </p>
        <div>author {{ post.user.name }} {{ post.user.lastName }}</div>
        <div>
            {% for tag in post.postTags %}
                <em>{{ tag.name }}</em>
            {% endfor %}
        </div>
        <div>
            {{ post.content }}
        </div>
        {% for comment2 in post.comments %}
            <em>{{ comment2.text }}</em>
        {% endfor %}
{#        {{ dump(post.comments) }}#}
    </div>
{% endblock %}
