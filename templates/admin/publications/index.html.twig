{% extends 'content_base.html.twig' %}

{% block title %}Manage Comments{% endblock %}

{% block content_class %}{{ parent() }} show-article-container-border-green{% endblock %}

{% block content_body %}
    <div class="row">
        <div class="col-sm-12">
            <h1>Manage Comments ({{ pagination.getTotalItemCount }})</h1>

            <form>
                <div class="input-group mb-3">
                    <input type="text"
                           name="q"
                           class="form-control"
                           value="{{ app.request.query.get('q') }}"
                           placeholder="Search..."
                    >
                    <div class="input-group-append">
                        <button type="submit"
                                class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Article</th>
                    <th>Author</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for publication in pagination %}
                    <tr>
                        <td>
                            {{ publication.updatedAt | date('Y-m-d') }}
                        </td>
                        <td>
                            {{ publication.title }}
                        </td>
                        <td>
                            {{ publication.user.name }} {{ publication.user.lastName }}
                        </td>
                        <td>
                            {{ publication.statusName }}
                        </td>
                        <td style="width: 20%;">
                            <a href="{{ path('admin_publication_edit', {
                                id: publication.id
                            }) }}">
                                <span class="fa fa-pencil">Edit</span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No publications found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
